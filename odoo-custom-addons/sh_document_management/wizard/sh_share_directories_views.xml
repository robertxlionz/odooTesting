<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sh_share_directories_form_view" model="ir.ui.view">
        <field name="name">sh.share.directories.form.view</field>
        <field name="model">sh.share.directories</field>
        <field name="arch" type="xml">
            <form string="Directory Tags">
                <sheet>
                    <group>
                        <group>
                            <field name="sh_name" readonly="1" />
                        </group>
                        <group>
                            <field name="sh_share_url" widget="CopyClipboardChar" readonly="0" />
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button string="Cancel" class="oe_link" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
</odoo>